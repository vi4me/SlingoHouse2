
<div class="container padding">
  <h1 class="text-center padding_top">Группы</h1>
  <div class="group_box padding">

    <% @groups.each do |group| %>
    <div class="group_info">
      <h2><%= link_to group.title, group_path(group) %></h2>
      <p><%= group.text %></p>
    </div>

    <div class="group_img oneImg">
      <% group.images.each do |image| %>
        <%= image_tag(image.file_url) %>
      <% end %>
    </div>
    <% end %>
  </div> 
</div>
