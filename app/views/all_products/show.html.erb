<div class="container padding">
  <h1 class="text-center padding_top"><%= @product.name %></h1>
  <div class="prod_box padding">
    <div class="prod_info">
      <h3 class="card-title pricing-card-title">Цена: <%= @product.price %></h3>
      <p><%= @product.pr_description %></p>
    </div>
    <div class="img_section">
      <div class="prod_img">
        <% @product.images.each do |image| %>
          <%= image_tag(image.file_url) %>
        <% end %>
      </div>
    </div>
  </div> 
